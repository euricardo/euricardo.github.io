    var max = obj.length;
    
    setValues(obj[0]);
    var slider = $( "#sliders" ).slider({
        min: 1,
        value: 1,
        max: max,
        slide: function( event, ui ) {
            setValues(obj[ui.value-1]);
            
            $('#slb_'+ui.value).addClass('active');
            $( ".sl_box" ).removeClass('active');
            for(i = 0; i <= ui.value; i++)
                $('#slb_'+i).addClass('active');
                                    
            var div_len = $('#sliders').width();
            var width = div_len / (max - 1) * ui.value - 40;
            if(ui.value==8)
                width = width + 35;
            $('.slider_bg_active').css('width', width);
            
            /*$("#server_image_sprite").attr('class', '');
            $("#server_image_sprite").addClass('level'+ui.value);*/
            //$('#server_image_sprite img').attr('src', 'images/server'+(ui.value)+'.jpg');
            $('#server_image_sprite img').hide();
            $('#server_image_sprite #server'+ui.value).show();
        }
    });
    var div_len = $('#sliders').width();
    var spacing = div_len / (max - 1);
    for(var i = 0; i < max; i++){
        var num = i + 1;
        var margin = spacing * i + 25;
        var lnmargin = spacing * i + 48;
        $('.slider_bg').append('<div class="sl_box" id="slb_'+num+'" style="margin-left:'+margin+'px">'+num+'</div>');
        $('.slider_bg').append('<div class="ln" style="margin-left:'+lnmargin+'px"></div>');
        if(i == 0){
            $('#slb_1').addClass('active');
        }
    }

    $( ".sl_box" ).click(function() {
        var id = $(this).attr('id').replace('slb_', '');
        slider.slider( "value", id);
        $( ".sl_box" ).removeClass('active');
        for(i = 0; i <= id; i++)
            $('#slb_'+i).addClass('active');
                            
        var width = div_len / (max - 1) * id - 40;
        if(id==8)
            width = width + 35;
        $('.slider_bg_active').css('width', width);
        /*
        $("#server_image_sprite").attr('class', '');
        $("#server_image_sprite").addClass('level'+id);
        */
        //$('#server_image_sprite img').attr('src', 'images/server'+(id)+'.jpg');
        $('#server_image_sprite img').hide();
        $('#server_image_sprite #server'+id).show();
        setValues(obj[id-1]);
    });

    $( ".sl_box:nth(2)").click();

function setValues(obj){
    $('#cpu').html(obj.cpu);
    $('#ram').html(obj.ram);
    $('#hdd').html(obj.hdd);
    $('#bandwidth').html(obj.bandwidth);
    $('#order-form').attr('action', "https://www.vps.me/order/" + obj.slug);
    $('#pid').val(obj.product_id);
        if(obj.pricing.type == 'free') {
        $('#price').html('Free');
    } else {
        $('#price').html('$' + obj.pricing.recurrent['1M'].price);
    }
}

