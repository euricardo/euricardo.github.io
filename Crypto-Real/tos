    bb.doVpsRequestUpgradeCheck = function(e){
        if($('#pid').val() == $('#opid').val()){
            bb.openPopup("#bb-popup-upgrade-error");
            return false;
        }
        return bb.doVpsRequestUpgrade(e);
    }

