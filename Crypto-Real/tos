    <script type="text/javascript">
    $(function() {
        $('select[name="country"]').bind('change',function(event){
            $.ajax({
                type: "GET",
                url: bb.restUrl('guest/system/phone_codes'),
                data: {country:$(this).val()},
                global: false,
                dataType: 'json',
                error: function(jqXHR, textStatus, e) {
                    bb.msg(e, 'error');
                },
                success: function(data) {
                    $('input[name="phone_cc"]').val(data.result);
                }
            });
        });
    });
    </script>
